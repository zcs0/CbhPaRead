<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#decbad" >
  <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="91PandaReader"
         android:layout_marginLeft="20sp"
         android:textColor="#000"
         android:textSize="22dp"
        />
      <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="网龙出品"
         android:textColor="#000"
         android:textSize="22dp"
         android:layout_marginLeft="20sp"
        />

 <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/note_share_covered" />

                <TextView
                    android:id="@+id/zihao"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="白天模式"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/shu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/zihao"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="经典二"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/zihao"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/meta_item_more" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bookbox_top" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/note_share_covered" />

                <TextView
                    android:id="@+id/zihao"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="夜间模式"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/shu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/zihao"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="夜间一"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/zihao"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/meta_item_more" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bookbox_top" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/note_share_covered" />

                <TextView
                    android:id="@+id/zihao"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="皮肤选择"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/shu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/zihao"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:text="木质仿真"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/zihao"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/meta_item_more" />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bookbox_top" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/note_share_covered" />

                <TextView
                    android:id="@+id/zihao"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="摇摇换肤"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                

                <CheckBox
                    android:id="@+id/jian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bookbox_top" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/note_share_covered"  >

              

                <TextView
                    android:id="@+id/zihao"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="亮度调节"
                    android:textColor="#000000"
                    android:textSize="22sp" />

               

                <SeekBar
                    android:id="@+id/jian"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/zihao"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    />

               

            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bookbox_top" />
           
        </LinearLayout>
    </ScrollView>


    

</LinearLayout>