<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brown_login_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:background="@drawable/brown_default_title_landscape">
           <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/wenjianback"
            android:text="返回"
            android:textColor="#ffffff"
            android:onClick="ReturnClick"
          />

      <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="登陆"
           android:textColor="#B22222"
             android:layout_centerInParent="true"
               android:textSize="17sp" 
          />
      
       
    </RelativeLayout>
    
        <RelativeLayout android:id="@+id/RelativeLayout02"
			android:background="@drawable/login_back" android:paddingTop="21.0px"
			android:paddingBottom="10.0px" android:layout_width="fill_parent"
			android:layout_height="220dp" android:layout_marginLeft="15.0px"
			android:layout_marginTop="30.0px" android:layout_marginRight="15.0px">
      <TextView 
          android:id="@+id/logintext"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="您的91通行证账号"
           android:textColor="#B22222"
          />
      <EditText 
          android:id="@+id/loginedit"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/logintext"
          />
      <TextView 
          android:id="@+id/loginpass"
             android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="请输入您的密码"
           android:textColor="#B22222"
           android:layout_below="@id/loginedit"/>
      <EditText 
          android:id="@+id/passwordedit"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/loginpass"
          android:password="true"
          />
      <CheckBox android:textSize="16.0sp" android:textColor="#ff222222"
				android:id="@+id/login_cb_savepwd" android:paddingLeft="50.0px"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:checked="true" android:button="@drawable/qq_btn_check"
				android:text="记住密码" 
				android:layout_below="@id/passwordedit" 
				/>
      
</RelativeLayout>
<Button 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/login_middle"
    android:layout_gravity="center_horizontal"
    android:id="@+id/lijilogin"
    android:text="立即登录"
    android:textColor="#ffffff"
    android:onClick="LiGilogin"
    />
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal|center_vertical"
    android:layout_marginTop="40dp"
    >
    <Button 
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_bottom"
        android:text="快速注册"
        android:textColor="#ffffff"
       
        />
      <Button 
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_bottom"
        android:text="找回账号"
        android:textColor="#ffffff"
       
        />
</LinearLayout>
</LinearLayout>