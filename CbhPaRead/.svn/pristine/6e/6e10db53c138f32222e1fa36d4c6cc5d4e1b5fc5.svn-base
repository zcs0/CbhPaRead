<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:background="#decbad" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/brown_default_title_landscape"
                android:text="字型"
                android:textSize="22sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:background="@drawable/wenjianback"
                android:onClick="onZiXingBack"
                android:text="返回"
                android:textColor="#ffffff" />
        </RelativeLayout>
 <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="91PandaReader"
         android:layout_marginLeft="20sp"
         android:textColor="#000"
         android:textSize="22dp"
        />
      <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="网龙出品"
         android:textColor="#000"
         android:textSize="22dp"
         android:layout_marginLeft="20sp"
        />
       <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/note_share_covered" />

                <TextView
                    android:id="@+id/zihao"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="加粗"
                    android:textColor="#000000"
                    android:textSize="22sp" />

            

                <CheckBox
                    android:id="@+id/jiacuone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  
                    android:layout_alignParentRight="true"
                  />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bookbox_top" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/note_share_covered" />

                <TextView
                    android:id="@+id/zihao"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="斜体"
                    android:textColor="#000000"
                    android:textSize="22sp" />

      

                <CheckBox
                    android:id="@+id/jiacutwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                  
                    android:layout_alignParentRight="true"
                  />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bookbox_top" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/note_share_covered" />

                <TextView
                    android:id="@+id/zihao"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="left"
                    android:text="下划线"
                    android:textColor="#000000"
                    android:textSize="22sp" />

             

                <CheckBox
                    android:id="@+id/jiacuthree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                  />
            </RelativeLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bookbox_top" />

      
           
        </LinearLayout>
    </ScrollView>

      
    

</LinearLayout>