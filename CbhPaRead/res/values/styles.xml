<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="wangluotab_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/wangluorbtnbg</item>
        <item name="android:background">@drawable/wangluoradiobtnbg</item>
    </style>

    <!-- 主页面点击熊猫 弹出的popwindow 里面的radiobutton -->
    <style name="mainPopRadiobtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/mainpopradiobtn</item>
        <item name="android:textColor">#000000</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">12sp</item>
        <!-- 设置的tabhost里面的自定义样式 -->
    </style>

    <style name="radio_style">
        <item name="android:layout_width">40dip</item>
        <item name="android:layout_height">100dip</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/shezhiradiostyle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>